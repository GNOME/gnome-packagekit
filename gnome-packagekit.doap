<Project xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:foaf="http://xmlns.com/foaf/0.1/"
         xmlns:gnome="http://api.gnome.org/doap-extensions#"
         xmlns="http://usefulinc.com/ns/doap#">

  <name xml:lang="en">GNOME PackageKit</name>
  <shortdesc xml:lang="en">PackageKit GNOME Client Tools</shortdesc>
  <category rdf:resource="http://api.gnome.org/doap-extensions#core" />
  <programming-language>C</programming-language>
  <description xml:lang="en">
   GNOME PackageKit is the name of the collection of graphical tools
   for PackageKit to be used in the GNOME desktop.
  </description>

  <homepage rdf:resource="http://www.packagekit.org/" />
  <mailing-list rdf:resource="http://lists.freedesktop.org/mailman/listinfo/packagekit/" />

  <maintainer>
    <foaf:Person>
      <foaf:name>Richard Hughes</foaf:name>
      <foaf:mbox rdf:resource="mailto:richard@hughsie.com" />
      <foaf:homepage rdf:resource="http://www.hughsie.com/" />
      <gnome:userid>rhughes</gnome:userid>
    </foaf:Person>
  </maintainer>

  <license rdf:resource="http://www.gnu.org/licenses/gpl-2.0.txt" />
  <bug-database rdf:resource="http://bugzilla.gnome.org/" />
  <screenshots rdf:resource="http://www.packagekit.org/pk-screenshots.html#gnome" />

</Project>
