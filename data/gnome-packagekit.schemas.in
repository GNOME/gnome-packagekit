<gconfschemafile>
  <schemalist>

    <schema>
      <key>/schemas/apps/gnome-packagekit/notify_complete</key>
      <applyto>/apps/gnome-packagekit/notify_complete</applyto>
      <owner>gnome-packagekit</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Notify the user when the transaction is complete</short>
        <long>Notify the user when the transaction is complete</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-packagekit/notify_available</key>
      <applyto>/apps/gnome-packagekit/notify_available</applyto>
      <owner>gnome-packagekit</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Notify the user when updates are available</short>
        <long>Notify the user when updates are available</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-packagekit/find_as_you_type</key>
      <applyto>/apps/gnome-packagekit/find_as_you_type</applyto>
      <owner>gnome-packagekit</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>If searches should be done for each letter</short>
        <long>If searches should be done for each letter</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-packagekit/update_timeout</key>
      <applyto>/apps/gnome-packagekit/update_timeout</applyto>
      <owner>gnome-packagekit</owner>
      <type>int</type>
      <default>60</default>
      <locale name="C">
        <short>The number of seconds idle to wait to check for updates</short>
        <long>The number of seconds idle to wait to check for updates</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-packagekit/update_check</key>
      <applyto>/apps/gnome-packagekit/update_check</applyto>
      <owner>gnome-packagekit</owner>
      <type>string</type>
      <default>daily</default>
      <locale name="C">
        <short>How often we should check for updates</short>
        <long>How often we should check for updates. Options are "hourly", "daily", "weekly", never"</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-packagekit/auto_update</key>
      <applyto>/apps/gnome-packagekit/auto_update</applyto>
      <owner>gnome-packagekit</owner>
      <type>string</type>
      <default>all</default>
      <locale name="C">
        <short>Auto update these types of updates</short>
        <long>Auto update these types of updates. Options are "all", "security", or "none"</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-packagekit/update_battery</key>
      <applyto>/apps/gnome-packagekit/update_battery</applyto>
      <owner>gnome-packagekit</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>If we should install updates automatically when on battery power</short>
        <long>If we should install updates automatically when on battery power</long>
      </locale>
    </schema>

  </schemalist>
</gconfschemafile>

